<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResumehMaker</title>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/materialize/css/materialize.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="navbar-fixed">
        <nav class="teal darken-4">
            <div class="nav-wrapper body-content">
                <a href="#" class="brand-logo">Montagem de Currículos</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Usuarios" asp-action="Registro">Registro</a></li>
                        <li><a asp-controller="Usuarios" asp-action="Login">Login</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Curriculos" asp-action="Index">Meus currículos</a></li>
                        <li><a asp-controller="InformacoesLogin" asp-action="Index">Minhas Informações</a></li>
                        <li><a asp-controller="Usuarios" asp-action="Logout">Logout</a></li>

                    }
                </ul>
            </div>
        </nav>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ResumehMaker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
